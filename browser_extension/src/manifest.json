{
  "manifest_version": 2,
  "name": "WEBMtube",
  "author": "bushig",
  "homepage_url": "https://github.com/bushig/webmtube",
  "browser_action": {
    "default_icon": "/icons/icon-64.png",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "*://devshaft.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://2ch.hk/*",
        "*://2ch.pm/*",
        "*://2ch.re/*",
        "*://2ch.tf/*",
        "*://2ch.wf/*",
        "*://2ch.yt/*",
        "*://2-ch.so/*"
      ],
      "js": [
        "main.bundle.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ],
  "icons": {
    "48": "/icons/icon-128.png",
    "96": "icons/icon-128.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    "icons/*.svg"
  ],
  "applications": {
    "gecko": {
      "strict_min_version": "48.0"
    }
  }
}